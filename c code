#include <stdio.h>

int main() {
    int n, i;
    float price, total = 0;
    int quantity;

    printf("Enter the number of items: ");
    scanf("%d", &n);

    for (i = 1; i <= n; i++) {
        printf("\nEnter price of item %d: ", i);
        scanf("%f", &price);

        printf("Enter quantity of item %d: ", i);
        scanf("%d", &quantity);

        total += price * quantity;
    }

    printf("\n-----------------------------");
    printf("\nTotal Bill Amount = %.2f", total);
    printf("\n-----------------------------\n");

    return 0;
}
